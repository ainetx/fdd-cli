{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts.ainetx.fdd_cli.validation.validation_issue.v1",
  "title": "ValidationIssue",
  "description": "Individual validation problem with severity, location, and description",
  "type": "object",
  "required": ["severity", "code", "message"],
  "properties": {
    "severity": {
      "type": "string",
      "enum": ["error", "warning", "info"],
      "description": "Issue severity level"
    },
    "code": {
      "type": "string",
      "description": "Unique error code for this issue type"
    },
    "message": {
      "type": "string",
      "description": "Human-readable description of the issue"
    },
    "location": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string"
        },
        "line": {
          "type": "integer",
          "minimum": 1
        },
        "column": {
          "type": "integer",
          "minimum": 1
        },
        "section": {
          "type": "string"
        }
      }
    },
    "suggestion": {
      "type": "string",
      "description": "Suggested fix for the issue"
    }
  }
}
